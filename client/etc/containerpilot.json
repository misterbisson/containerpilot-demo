{
  "consul": "{{ if .CONSUL_AGENT }}localhost{{ else }}{{ .CONSUL }}{{ end }}:8500",
  "logging": {
    "level": "DEBUG"
  },
  "backends": [
    {
      "name": "server",
      "poll": 17,
      "onChange": ["curl", "localhost:8500/v1/health/service/server"],
      "timeout": "30s"
    }
  ],
  "coprocesses": [{{ if .CONSUL_AGENT }}
    {
      "command": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/var/lib/consul",
                  "-config-dir=/etc/consul",
                  "-rejoin",
                  "-retry-join", "{{ .CONSUL }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }{{ end }}],
  "telemetry": {
    "port": 9090,
    "sensors": []
  }
}
